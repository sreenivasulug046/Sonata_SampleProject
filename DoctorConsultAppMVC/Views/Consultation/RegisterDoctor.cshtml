            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Register" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Login here", "DoctorLogin")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
