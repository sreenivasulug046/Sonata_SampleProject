@model DoctorConsultAppMVC.Models.DoctorRegistration

@{
    ViewBag.Title = "RegisterDoctor";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="k-form-horizontal">
        <div class="k-fab-dark" style="color:blue; align-content:center baseline "><h4>Doctor Registration</h4></div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="k-form-group">
            @Html.LabelFor(model => model.DoctorName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="k-col-md-10">
                @(Html.Kendo().TextBoxFor(model => model.DoctorName)
                      .Name("DoctorName")
                      .Label(label=>label.Content("Name"))
                      .HtmlAttributes(new { placeholder = " Name", @class = "form-control", required = "required", style = "width: 20%;border-radius: 8px;border-color: ##3480eb;" })
              )
            </div>
        </div>
        <br />

        <div class="k-form-group">
            @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="k-col-md-10">
                @(Html.Kendo().TextBoxFor(model => model.Gender)
                      .Name("Gender")
                      .Label(label=>label.Content("Gender"))
                      .HtmlAttributes(new { placeholder = " Gender", @class = "form-control", required = "required", style = "width: 20%;border-radius: 8px;border-color: ##3480eb;" })
              )
            </div>
        </div>
        <br />

        <div class="k-form-group">
            @Html.LabelFor(model => model.Specilization, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="k-col-md-10">
                @(Html.Kendo().TextBoxFor(model => model.Specilization)
                      .Name("Specilization")
                      .Label(label=>label.Content("Specilization"))
                      .HtmlAttributes(new { placeholder = " Specilization", @class = "form-control", required = "required", style = "width: 20%;border-radius: 8px;border-color: ##3480eb;" })
             )
            </div>
        </div>
        <br />

        <div class="k-form-group">
            @Html.LabelFor(model => model.PhNo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="k-col-md-10">
                @(Html.Kendo().TextBoxFor(model => model.PhNo)
                      .Name("PhNo")
                      .Label(label=>label.Content("PhNo"))
                      .HtmlAttributes(new { placeholder = " Phone", @class = "form-control", required = "required", style = "width: 20%;border-radius: 8px;border-color: ##3480eb;" })
                )
            </div>
        </div>
        <br />

        <div class="k-form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="k-col-md-10">
                @(Html.Kendo().TextBoxFor(model => model.Email)
                      .Name("Email")
                      .Label(label=>label.Content("Email"))
                      .HtmlAttributes(new { placeholder = " Email", @class = "form-control", required = "required", style = "width: 20%;border-radius: 8px;border-color: ##3480eb;" })
               )
            </div>
        </div>
        <br />

        <div class="k-form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="k-col-md-10">
                @(Html.Kendo().TextBoxFor(model => model.Password)
                      .Name("Password")
                      .Label(label=>label.Content("Password"))
                      .HtmlAttributes(new { placeholder = " Password", @class = "form-control", type="Password",required = "required", style = "width: 20%;border-radius: 8px;border-color: ##3480eb;" })
                )
            </div>
        </div>
        <br />

        <div class="k-form-group">
            <div class="k-col-md-offset-2 col-md-10">
               
                <button type="submit" value="Register"class="btn  btn-primary" >Register</button>
            </div>
            <div>
                @Html.ActionLink("Login here", "DoctorLogin")
            </div>
        </div>
    </div>
 }



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
