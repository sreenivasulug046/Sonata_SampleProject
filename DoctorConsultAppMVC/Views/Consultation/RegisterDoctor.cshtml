@model DoctorConsultAppMVC.Models.DoctorRegistration

@{
    ViewBag.Title = "RegisterDoctor";
}

<h2>RegisterDoctor</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
