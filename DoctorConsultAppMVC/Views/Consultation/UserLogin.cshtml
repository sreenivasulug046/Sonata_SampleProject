@model DoctorConsultAppMVC.Models.UserLogin

@{
    ViewBag.Title = "UserLogin";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="k-form-horizontal">
    <div class="k-fab-dark" style="color:blue; align-content:center baseline "><h4>UserLogin</h4></div>
    
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="k-form-group">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2", style = "border-color: #3480eb ;" })
        <div class="k-col-md-10">
            @(Html.Kendo().TextBoxFor(model => model.Email)
                      .Name("Email")
                      .Label(label=>label.Content("Email"))
                      .HtmlAttributes(new { placeholder = " Email", @class = "form-control", required = "required", style = "width: 20%;border-radius: 8px;border-color: #3480eb ;" })
           )
        </div>

    </div>
    <br />

    <div class="k-form-group">
        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="k-col-md-10">
            @(Html.Kendo().TextBoxFor(model => model.Password)
                      .Name("Password")
                      .Label(label=>label.Content("Password"))
                      .HtmlAttributes(new { placeholder = " Password", @class = "form-control", required = "required", style = "width: 20%;border-radius: 8px;border-color: ##3480eb;" })
           )
        </div>

    </div>
    <br />

    <div class="k-form-group">
        <div class="k-col-md-offset-6 col-md-10">
            <button type="submit" class="btn btn-primary" value="Login">Login</button>
        </div>
        <div>
            @Html.ActionLink("Register User", "RegisterUser")
        </div>
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
