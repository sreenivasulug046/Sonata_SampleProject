@model DoctorConsultAppMVC.Models.UserLogin

@{
    ViewBag.Title = "UserLogin";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="k-form-horizontal">
    <div class="k-fab-dark" style="color:blue; text-align:center;">
    <h4>UserLogin</h4>
    <div>
        <img src="~/images/user.png" alt="Smiley face" width="45" height="45" style="border:1px solid black; border-radius: 8px;" />
    </div>
    <br />
    </div>
    <div style="text-align:center; background-color:aliceblue; border:groove;border-radius: 8px;">
        <div class="k-form-group">
            <div class="k-col-md-10">
                @(Html.Kendo().TextBoxFor(model => model.Email)
                      .Name("Email")
                      .Label(label=>label.Content("Email").Floating(true))
                      .HtmlAttributes(new { placeholder = " Email", @class = "form-control", required = "required", style = "width: 120%;border-radius: 8px;border-color: #3480eb ;" })
           )
            </div>

        </div>


        <div class="k-form-group">
            <div class="k-col-md-10">
                @(Html.Kendo().TextBoxFor(model => model.Password)
                      .Name("Password")
                      .Label(label=>label.Content("Password").Floating(true))
                      .HtmlAttributes(new { placeholder = " Password", @class = "form-control", type="Password", required = "required", style = "width: 120%;border-radius: 8px;border-color: ##3480eb;" })
           )
            </div>
        </div>
        <div class="form-group">
            <div class="k-col-md-10" style="color:red">
                <div id="alertmsg">
                    @ViewData["Message"]

                </div>
            </div>
        </div>
        <br />

        <div class="k-form-group">
            <div class="k-col-md-offset-6 col-md-10">
                <button type="submit" class="btn btn-primary" value="Login">Login</button>
            </div>
            <div>
                @Html.ActionLink("Register User", "RegisterUser")
            </div>
        </div>
    </div>
</div>

}

