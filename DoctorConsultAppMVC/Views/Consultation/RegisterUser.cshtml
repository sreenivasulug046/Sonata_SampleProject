@model DoctorConsultAppMVC.Models.UserRegistration

@{
    ViewBag.Title = "RegisterUser";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="k-form-horizontal" id="registrationForm">
        <div class="k-fab-dark" style="color:blue;text-align:center; ">
            <h4>User Registration Form</h4>
            <div>
                <img src="~/images/user.png" alt="Smiley face" width="60" height="60" style="border:1px solid black; border-radius: 10px;" />
            </div>
        </div>
      <div style="background-color:#d9ffb3;border:groove;border-radius: 10px;">
        <div class="k-form-group" style="margin:0 0 0 5px">
            <div class="k-col-md-10">
                @(Html.Kendo().TextBoxFor(model => model.UserName)
                      .Name("UserName")
                      .Label(label=>label.Content("Name").Floating(true))
                      .HtmlAttributes(new { placeholder = " Name", @class = "form-control", required = "required", style = "width: 120%;border-radius: 8px;border-color: ##3480eb;" })
              )
            </div>
        </div>
        <br />

        <div class="k-form-group" style="margin:0 0 0 5px">
            <div class="k-col-md-10">
                @(Html.Kendo().TextBoxFor(model => model.PhNo)
                      .Name("PhNo")
                      .Label(label=>label.Content("PhNo").Floating(true))
                      .HtmlAttributes(new { placeholder = " Phone", @class = "form-control", required = "required", style = "width: 120%;border-radius: 8px;border-color: ##3480eb;" })
              )
            </div>
        </div>
        <br />

        <div class="k-form-group" style="margin:0 0 0 5px">
            <div class="k-col-md-10">
                @(Html.Kendo().TextBoxFor(model => model.Email)
                      .Name("Email")
                      .Label(label=>label.Content("Email").Floating(true))
                      .HtmlAttributes(new { placeholder = " Email", @class = "form-control", required = "required", style = "width: 120%;border-radius: 8px;border-color: ##3480eb;" })
              )
            </div>
        </div>
        <br />

        <div class="k-form-group" style="margin:0 0 0 5px">
            <div class="k-col-md-10">
                @(Html.Kendo().TextBoxFor(model => model.Password)
                      .Name("Password")
                      .Label(label=>label.Content("Password").Floating(true))
                      .HtmlAttributes(new { placeholder = " Password", @class = "form-control", type="Password",required = "required", style = "width: 120%;border-radius: 8px;border-color: ##3480eb;" })
              )
            </div>
        </div>
        <br />

        <div class="k-form-group">
            <div class="k-col-md-offset-2 col-md-10">
                <button type="submit" value="Register" class="btn btn-primary">Register</button>
            </div>
            <div>
                @Html.ActionLink("Login here", "UserLogin")
            </div>
        </div>
       </div>
    </div>
}
<script>
$(function () {
$("form").kendoValidator();
});
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
