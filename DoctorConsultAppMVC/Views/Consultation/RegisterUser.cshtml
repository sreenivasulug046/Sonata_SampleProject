@model DoctorConsultAppMVC.Models.UserRegistration

@{
    ViewBag.Title = "RegisterUser";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="k-form-horizontal" id="registrationForm">
        <div class="k-fab-dark" style="color:blue; align-content:center baseline "><h4>User Registration</h4></div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="k-form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="k-col-md-10">
                @(Html.Kendo().TextBoxFor(model => model.UserName)
                      .Name("UserName")
                      .Label(label=>label.Content("Name"))
                      .HtmlAttributes(new { placeholder = " Name", @class = "form-control", required = "required", style = "width: 20%;border-radius: 8px;border-color: ##3480eb;" })
              )
            </div>
        </div>
        <br />

        <div class="k-form-group">
            @Html.LabelFor(model => model.PhNo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="k-col-md-10">
                @(Html.Kendo().TextBoxFor(model => model.PhNo)
                      .Name("PhNo")
                      .Label(label=>label.Content("PhNo"))
                      .HtmlAttributes(new { placeholder = " Phone", @class = "form-control", required = "required", style = "width: 20%;border-radius: 8px;border-color: ##3480eb;" })
              )
            </div>
        </div>
        <br />

        <div class="k-form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="k-col-md-10">
                @(Html.Kendo().TextBoxFor(model => model.Email)
                      .Name("Email")
                      .Label(label=>label.Content("Email"))
                      .HtmlAttributes(new { placeholder = " Email", @class = "form-control", required = "required", style = "width: 20%;border-radius: 8px;border-color: ##3480eb;" })
              )
            </div>
        </div>
        <br />

        <div class="k-form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="k-col-md-10">
                @(Html.Kendo().TextBoxFor(model => model.Password)
                      .Name("Password")
                      .Label(label=>label.Content("Password"))
                      .HtmlAttributes(new { placeholder = " Password", @class = "form-control", type="Password",required = "required", style = "width: 20%;border-radius: 8px;border-color: ##3480eb;" })
              )
            </div>
        </div>

        @*<div class="k-form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="k-col-md-10">
                @(Html.Kendo().TextBoxFor(model => model.Password)
                      .Name("Password")
                      .Label(label=>label.Content("Password"))
                      .HtmlAttributes(new { placeholder = " Confirm Password", @class = "form-control", required = "required", style = "width: 20%;border-radius: 8px;border-color: ##3480eb;" })
              )
            </div>
        </div>*@




        <div class="k-form-group">
            <div class="k-col-md-offset-2 col-md-10">
                <button type="submit" value="Register" class="btn btn-primary">Register</button>
            </div>
            <div>
                @Html.ActionLink("Login here", "UserLogin")
            </div>
        </div>
    </div>
}

