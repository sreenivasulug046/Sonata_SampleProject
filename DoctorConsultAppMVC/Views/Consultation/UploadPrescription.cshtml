@model DoctorConsultAppMVC.Models.UploadPrescription

@{
    ViewBag.Title = "UploadPrescription";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="k-form-horizontal">
    <h4>Upload a Doctor Prescription</h4>
    <hr />
    @(Html.Kendo().Upload()
                  .Name("files")
                  .Async(a => a
                  .Save("UploadPrescription", "Consultation")
                  .AutoUpload(true)
                 ))
             

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            @(Html.Kendo().TextBoxFor(model => model.AdditionalSuggestion)
                      .Name("Suggestion")
                      .Label(label=>label.Content("AdditionalSuggestion").Floating(true))
                      .HtmlAttributes(new { placeholder = " Suggestion", @class = "form-control", required = "required", style = "width: 120%; height:10x; border-radius: 8px;border-color: #3480eb ;" })
           )

        </div>
    </div>
    <br /><br />

    <div class="k-form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="submit" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List Apointments", "BookedApointments")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
